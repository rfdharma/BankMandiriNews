<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:id="@+id/card_view"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/newsImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="-5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:textSize="17dp"
            android:textStyle="bold"
            android:justificationMode="inter_word"/>


        <TextView
            android:id="@+id/authorTextViewAll"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:textSize="9dp" />

        <ImageView
            android:id="@+id/user_symbol"
            android:layout_width="9dp"
            android:layout_height="10dp"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/authorTextViewAll"
            android:layout_toEndOf="@id/cardView"
            android:layout_toRightOf="@id/cardView"
            android:src="@drawable/user" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:id="@+id/calendar"
            android:src="@drawable/calendar"
            android:layout_toEndOf="@id/authorTextViewAll"
            android:layout_toRightOf="@id/authorTextViewAll"
            android:layout_below="@+id/titleTextView"
            android:layout_marginLeft="-10dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/publish_news"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/calendar"
            android:layout_toRightOf="@id/calendar"
            android:textSize="9dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>